
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

<div class="contentEmpty"> </div>

<!--form Login_start-->
<section id="form" class="popup_login">
    <div class="container">
        <div class="row">
            <div id="LoginFormCenterCss" class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Đăng nhập</h2>
                    @using (Html.BeginForm())
                    {
                        <input name="txtTenDangNhap"  type="text" placeholder="Tên đăng nhập" />
                        <input name="txtMatKhau" type="password" placeholder="Mật khẩu" />
                        <span id="NhoMatKhau">
                            <input type="checkbox" class="checkbox">
                            Nhớ mật khẩu
                        </span>
                        <div id="buttonDN-Thoat">
                            <button id="btnDangNhapform" type="submit" class="btn btn-default"><span>Đăng nhập</span></button>
                        </div>
                    }
                </div><!--/login form-->
            </div>
        </div>
    </div>
    <button id="btnThoat" type="submit" class="btn btn-default"><span id="ThoatSpan"><a id="btnThoatDangNhap" href="@Url.Action("Index","Home")">Thoát</a></span></button>
</section>
<!--/form Login_end-->

